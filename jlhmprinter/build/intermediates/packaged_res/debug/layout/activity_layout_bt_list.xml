<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bt"
    android:layout_width="match_parent"
    android:background="?attr/main_bg_color"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        />
    <com.hand.baselibrary.widget.HeaderBar
        android:id="@+id/header_bar"
        android:layout_below="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/printer_select_device"
        />
    <TextView
        android:id="@+id/tv_search_tip"
        android:layout_below="@+id/header_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索设备中..."
        android:textColor="?attr/text_color_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_below="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
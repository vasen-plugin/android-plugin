<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/main_splash_bg" />
    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        />
    <com.hand.baselibrary.widget.FullVideoView
        android:id="@+id/video_adds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_bottom"
        android:background="@color/white"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/img_adds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_bottom"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:id="@+id/rlt_ads"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_34"
        android:layout_alignParentRight="true"
        android:background="@drawable/base_gray_4a_corner"
        android:visibility="gone"
        tools:visibility="visible"
        >
        <TextView
            android:id="@+id/tv_no_show_again"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_12"
            android:text="@string/base_no_show_again"
            android:textSize="@dimen/dp_14"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingRight="@dimen/dp_12"
            />
        <View
            android:id="@+id/bar"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_14"
            android:background="@color/white"
            android:layout_toRightOf="@+id/tv_no_show_again"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_skip_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:text="@string/base_skip_time"
            android:layout_toRightOf="@+id/bar"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/white"
            android:paddingRight="@dimen/dp_12"
            />
    </RelativeLayout>
</RelativeLayout>